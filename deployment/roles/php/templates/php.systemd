[Unit]
Description=The PHP 8.4 FastCGI Process Manager
Documentation=man:php-fpm8.4(8)
After=network.target

[Service]
Type=notify
ExecStart=
ExecStart=/usr/sbin/php-fpm8.4 --nodaemonize --fpm-config /etc/php/8.4/fpm/php-fpm.conf
ExecStartPost=
ExecStartPost=-/usr/lib/php/php-fpm-socket-helper install {{ php_socket }} /etc/php/8.4/fpm/pool.d/www.conf 80
ExecStopPost=
ExecStopPost=-/usr/lib/php/php-fpm-socket-helper remove {{ php_socket }} /etc/php/8.4/fpm/pool.d/www.conf 80
ExecReload=/bin/kill -USR2 $MAINPID

[Install]
WantedBy=multi-user.target
